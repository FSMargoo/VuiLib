<main-window type="mainwindow" title="welcome to vuilib" width="847" height="325" sizable="false" class="main-widget" style-sheet-src="./style-sheet.css">
    <purple-block type="textlabel" class="purple-block" width="@fill" height="@fill">
        <background type="textlabel" width="@fill" height="@fill" class="main-widget"/>
        <circle type="textlabel" class="purple-circle" x="619" y="-172" width="407" height="396"/>
        <blur-label type="blurlabel" class="blur-label" x="0" y="0" width="@fill" height="@fill"/>

        <first-text type="textlabel" class="purple-title-text" x="69" y="80" text="W" auto-size="true"/>
        <second-text type="textlabel" class="title-text" x="128" y="80" text="elcome to VuiLib" auto-size="true"/>

        <sub-text type="textlabel" class="sub-title" x="72" y="141" text="Here is a demo for you, hope you enjoy." auto-size="true"/>

        <white-label type="textlabel" class="white-label" x="69" y="204" width="96" height="11"/>
        <purple-label type="textlabel" class="purple-label" x="165" y="204" width="96" height="11"/>
        <deeply-purple-label type="textlabel" class="light-purple-label" x="261" y="204" width="96" height="11"/>

        <fade-out-animation type="position-animation" target-position="@point(0, -40)" duration="300"/>
        <fade-in-animation type="position-animation" target-position="@point(0, 0)" duration="300"/> 
        <fade-out-opacity-animation type="opacity-animation" target-opacity="0" duration="300"/>
        <fade-in-opacity-animation type="opacity-animation" target-opacity="1" duration="300"/>
    </purple-block>
    
