<main-widget type="mainwindow" width="1920" height="1080" style-sheet-src="./style.css" borderless="true" class="main-window" sizable="false"
        style-sheet=".main-window {
                        background-color: #0C111E;
                    }"
        styly-sheet-src="./style.css">
    <logo-ui type="textlabel" width="@fill" height="@fill">
        <logo-image type="imagelabel" src="./resource/asset/obe-icon.png" x="@center" y="@ratio(0.40)" width="82" height="82"/>
        <status-percent-bar type="status-percent-bar" x="@center" y="@ratio(0.55)" width="145" height="4"/>
        <transparent-animation type="opacity-animation" duration="200" target-opacity="0" animation-curve="ease-in-out-sine-curve"/>
    </logo-ui>
    <intrdouct-ui type="textlabel" width="@fill" height="@fill" transparency="0">
        <wallpaper type="imagelabel" width="@fill" height="@fill" src="./resource/asset/wallpaper.png"/>
        <blur-label type="blurlabel" width="@fill" height="@fill" class="blur-label"
            style-sheet=".blur-label {
                radius: 24px;
                background-color: rgba(0, 0, 0, 0.5);
                border-color: rgba(255, 255, 255, 0.4);
            }"/>
        <white-logo type="imagelabel" auto-size="true" src="./resource/asset/obe-icon.png" x="@ratio(0.39)" y="@center"/>
        <logo-text type="textlabel" auto-size="true" text="Windows 12" x="@ratio(0.45)" y="@center" class="logo-text"/>
        <transparent-animation type="opacity-animation" duration="200" target-opacity="1" animation-curve="ease-in-out-sine-curve"/>
        <fade-out-animation type="opacity-animation" duration="200" target-opacity="0" animation-curve="ease-in-out-sine-curve"/>
    </intrdouct-ui>
    <main-ui type="textlabel" width="@fill" height="@fill" transparency="0">
        <wallpaper type="imagelabel" width="@fill" height="@fill" src="./resource/asset/wallpaper.png"/>
        <bar type="blurlabel" width="@scale(0.8)" height="76" x="@center" y="@ratio(0.9)" class="bar" style-sheet="
            .bar {
                border-radius: 17px;
                radius: 28px;
                background-color: rgba(255, 255, 255, 0.78);
            }
            .tool-button {
                background-color: rgba(255, 255, 255, 0);
                border-color: rgba(255, 255, 255, 0);
                box-shadow: #ffffff, rgba(0, 0, 0, 0.16);
            }
            ">
            <icons-contain type="textlabel" width="@fill" height="@fill" y="80" transparency="0">
                <windows-icon type="iconbutton" src="./resource/asset/bar-icon.png" width="44" height="44" x="@ratio(0.35)" y="@center"
                class="windows-icon" style-sheet="
                    .windows-icon {
                        background-color: rgba(255, 255, 255, 0);
                        border-color: rgba(255, 255, 255, 0);
                        border-radius: 4px;
                    }
                    .windows-icon:hover {
                        background-color: rgba(255, 255, 255, 0);
                        border-color: rgba(255, 255, 255, 0);
                        border-radius: 4px;
                    }
                    .windows-icon:active {
                        background-color: rgba(255, 255, 255, 1);
                        border-color: rgba(255, 255, 255, 1);
                        border-radius: 4px;
                    }
                    " />
                <search-button type="iconbutton" src="./resource/asset/search.png" width="22" height="28" x="@ratio(0.40)" y="@center"
                    class="tool-button"/>
                <store-button type="iconbutton" src="./resource/icons/Store.png" width="44" height="44" x="@ratio(0.45)" y="@center"
                    class="tool-button"/>
                <explorer-button type="iconbutton" src="./resource/icons/Explorer.png" width="44" height="44" x="@ratio(0.50)" y="@center"
                    class="tool-button"/>
                <setting-button type="iconbutton" src="./resource/icons/Setting.png" width="44" height="44" x="@ratio(0.55)" y="@center"
                    class="tool-button"/>
                <photo-button type="iconbutton" src="./resource/icons/Photo.png" width="44" height="44" x="@ratio(0.60)" y="@center"
                    class="tool-button"/>

                <move-in-animation type="position-animation" duration="800" target-position="@point(0, 0)" animation-curve="ease-in-out-quart-curve"/>
                <transparent-animation type="opacity-animation" duration="800" target-opacity="1" animation-curve="ease-in-out-sine-curve"/>
            </icons-contain>
            
            <time-text type="textlabel" x="@ratio(0.82)" y="@ratio(0.15)" width="@fill" height="@fill" class="date-text"/>
        </bar>
        <transparent-animation type="opacity-animation" duration="200" target-opacity="1" animation-curve="ease-in-out-sine-curve"/>
    </main-ui>
</main-widget>